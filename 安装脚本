docker run -it \
  --name bark \
  --gpus '"device=0"' \
  -p 2025:2025 \
  nvidia/cuda:12.4.1-cudnn-devel-ubuntu22.04 \
  /bin/bash



docker exec -it bark /bin/bash







apt-get update 
apt-get install -y  pip git python3 ffmpeg vim




pip install git+https://github.com/suno-ai/bark.git
pip install git+https://github.com/huggingface/transformers.git
pip install torch==2.5.0 torchvision torchaudio --index-url https://download.pytorch.org/whl/cu118


pip install encodec funcy scipy
pip install fastapi uvicorn transformers torch soundfile pydub


cd ~
git clone https://github.com/pinetrick/bark
cd ~/bark
python3 app.py
python3 example.py



docker commit bark pinetrick/bark:v1
docker push bark/bark:v1




docker run -it \
  --name wav2lip \
  --restart=always \
  --gpus '"device=0"' \
